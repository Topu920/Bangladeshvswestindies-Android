            android:layout_width="match_parent"
            android:layout_height="20dp">
        </LinearLayout>


        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:textSize="20sp"
            android:text="০৭. আরিফুল হক" />
